@page
@model ELearnApp.Pages.Admin.Index

@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "Admin Dashboard";
}
<style>
    .chart-container{
    width: 100%;
        height: 100%;
    }
    
</style>


<div class="container">
    <h1>Admin Dashboard</h1>
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Recent Users</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Email</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var user in Model.userModels)
                        {
                            <tr>
                                <td ><img class="rounded-circle profile-img" src="@user.imgsrc"/></td>
                                <td>@user.full_name</td>
                                <td>@user.email</td>
                            </tr>
                        }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Recent Orders</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var order in Model.LastOrders)
                        {
                            <li class="list-group-item">Order <span class="blockquote-footer">@order.order_uid</span> - $@order.total_amount</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Revenue Chart</h5>
                </div>
                <div class="card-body chart-container">
                    <canvas id="revenueChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/chart.js/dist/chart.umd.min.js"></script>
<script src="/js/Admin/AdminChart.min.js"></script>