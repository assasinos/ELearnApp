@page "/admin/instructor/{userUid}"
@model ELearnApp.Pages.Admin.Instructor

@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Edit Instructor";
}


<div class="modal fade" id="ConfirmModal" tabindex="-1" aria-labelledby="ConfirmModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm your action</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @* Generated by JS *@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="ConfirmButton">Save changes</button>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="card-group mt-3">

        <div class="card">
            <div class="card-header">
                Instructor Editor
            </div>
            <div class="card-body p-2">

                <form id="UserForm">
                    <div class="form-group mt-3">
                        <label for="user_uid">User UID:</label>
                        <input name="user_uid" type="text" class="form-control" id="user_uid" value="@Model.InstructorModel.user_uid" readonly>
                    </div>
                    <div class="form-group mt-3">
                        <label for="password">Password:</label>
                        <input type="text" class="form-control" disabled id="password" name="password" value="*****************************************">
                    </div>
                    <div class="form-group mt-3">
                        <label for="username">Username:</label>
                        @* I think this should not be editable by anyone  *@
                        @* It's used to log in *@
                        <input name="username" class="form-control " disabled id="username" value="@Model.InstructorModel.username"/>
                    </div>
                    <div class="form-group mt-3">
                        <label for="email">E-Mail:</label>

                        @* I think this can be editable by the admin if Instructor wants to change it *@
                        @* Or Maybe add an option to change it by the user in the future*@
                        <input name="email" class="form-control"  id="email" value="@Model.InstructorModel.email"/>
                    </div>
                    <div class="form-group mt-3">
                        <label for="imgsrc">Image Source:</label>
                        <span>
                            <img class="rounded-circle" style="max-height: 4vh; min-height: 2vh" src="@Model.InstructorModel.imgsrc" alt="Course Image Source Display" id="CourseImg"/>
                            <input type="text" class="form-control" id="imgsrc" name="imgsrc" value="@Model.InstructorModel.imgsrc">
                        </span>
                    </div>
                    <div class="form-group mt-3">
                        <label for="full_name">Full Name:</label>

                        @* I think this can be editable by the admin if Instructor wants to change it *@
                        @* Or Maybe add an option to change it by the user in the future*@
                        <input name="full_name" class="form-control " id="full_name" value="@Model.InstructorModel.full_name"/>
                    </div>

                    <div class="form-group mt-3">
                        <label for="bio">Bio:</label>
                        <textarea name="bio" class="form-control" id="bio" >@Model.InstructorModel.bio</textarea>
                    </div>


                    <div class="form-group mt-3">
                        <label for="createdAt">Creation Date:</label>
                        <input type="text" class="form-control" id="createdAt" value="@Model.InstructorModel.created_at" disabled>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3" id="UpdateUserBTN">Update Course</button>
                    
                    <button type="button" class="btn btn-danger mt-3" id="RemoveRoleBTN">Remove Instructor role</button>

                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/Toast.min.js"></script>
<script src="/js/Admin/InstructorEditor.min.js"></script>
<script>const img = $("#CourseImg"); $("#imgsrc").on("focusout", (e)=>{img.attr("src",e.target.value);});</script>