@page
@model ELearnApp.Pages.Profile.Settings

@{
    Layout = "Shared/_Layout";
}

<div class="modal fade" id="ConfirmModal" tabindex="-1" aria-labelledby="ConfirmModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirm your action</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        @* Generated by JS *@
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-danger" id="ConfirmButton">Delete My Account !</button>
      </div>
    </div>
  </div>
</div>




<div class="container">
    <div class="row p-2">
        <p class="fs-2">Personal Information</p>
        <div class="col">
            <form id="PersonalForm">
                <div class="form-group mt-3">
                    <label for="email">E-Mail:</label>
                    <input type="text" class="form-control" id="email" name="email" value="@Model.UserInformation.email">
                </div>

                @* OR maybe use Registration model and 2 separate inputs for First name and surname *@
                <div class="form-group mt-3">
                    <label for="full_name">Full Name:</label>
                    <input type="text" class="form-control" id="full_name" name="full_name" value="@Model.UserInformation.full_name">
                </div>

                <div class="form-group mt-3">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Insert Your Password">
                </div>
                <button type="submit" class="btn btn-primary mt-2" id="PersonalInfoBTN">Update Personal Information</button>
            </form>
        </div>
    </div>
    <hr/>
    <div class="row p-2">
        <p class="fs-2">Change your password</p>
        <div class="col">
            <form id="PasswordForm">

                <div class="form-group mt-3">
                    <label for="oldpassword">Current Password:</label>
                    <input type="password" class="form-control" id="oldpassword" name="oldpassword" placeholder="Insert Your current Password">
                </div>

                <div class="form-group mt-3">
                    <label for="newpassword">New Password:</label>
                    <input type="password" class="form-control" id="newpassword" name="newpassword" placeholder="Insert Your new Password">
                </div>

                <div class="form-group mt-3">
                    <label for="newpasswordrepeat">Repeat your Password:</label>
                    <input type="password" class="form-control" id="newpasswordrepeat" name="newpasswordrepeat" placeholder="Insert Your new Password">
                </div>

                <button type="submit" class="btn btn-primary mt-2" id="PasswordBTN">Update Password</button>
            </form>
        </div>
    </div>
    <hr/>
    <div class="row p-2">
        <p class="fs-2">Delete your Account</p>
        <div class="col">
            <form id="DeleteAccountForm">

                <div class="form-group mt-3">
                    <label for="DeletePassword">Current Password:</label>
                    <input type="password" class="form-control" id="DeletePassword" name="DeletePassword" placeholder="Insert Your current Password">
                </div>
                

                <div class="form-group mt-3">
                    <label for="DeletePasswordRepeat">Repeat your Password:</label>
                    <input type="password" class="form-control" id="DeletePasswordRepeat" name="DeletePasswordRepeat" placeholder="Repeat Your Password">
                </div>

                <button type="submit" class="btn btn-danger mt-2" id="DeleteAccountBTN">Delete your Account</button>
            </form>
        </div>
    </div>
</div>


<script src="/js/UserSettings.min.js"></script>
<script src="/js/Toast.min.js"></script>